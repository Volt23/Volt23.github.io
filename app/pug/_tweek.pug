mixin paragraph(titolo,testo)
	h3.titolo= titolo
	.testo
		p=testo
			block
	.spias

mixin intro(testo)
	p.intro=testo

mixin imm(src,didasc)
	//- attributes == {class: "btn"}
	img.imm(src=src)
	.didasc=didasc

doctype html
html(lang="en")
	include _head.pug
	body#week
		include _nav.pug
		.header
			block Title
		.chapters
			block chapter
				+paragraph('Hello world')
		.footer